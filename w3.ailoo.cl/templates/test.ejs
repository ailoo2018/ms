                    <tr>
                        <th style="font-size:10px; text-transform:uppercase">Artículo</th>
                        <th style="font-size:10px; text-transform:uppercase; text-align:center">Unidades</th>
                        <th style="font-size:10px; text-transform:uppercase; text-align:right">
                            <%= locals.isNeto ? 'Precio Neto' : 'Precio' %>
                        </th>
                    </tr>
                    </thead>
                </table>

                <% order.items.forEach(function(item) { %>
                    <% if(item.type === "PRODUCT" || item.type === "COUPON" || item.type === "DISCOUNT") { %>
                        <table style="border-spacing:0;border-collapse:collapse;vertical-align:top;text-align:left;border-bottom:1px solid #cccccc;width:100%">
                            <tbody>
                            <tr>
                                <td style="width:80px; padding:16px 0">
                                    <% if(item.type === "COUPON" || item.type === "DISCOUNT") { %>
                                        <img src="<%= domainHelper.getSiteRoot() %>/Templates/MotoMundiMobile/content/images/checkout-discount.png" alt="<%= item.product ? item.product.fullName : '' %>" style="width:30px;height:30px">
                                    <% } else { %>
                                        <img src="<%= domainHelper.getSiteRoot() %><%= imageHelper.getUrl(item.product, item.productItem, 95) %>" alt="<%= item.product.fullName %>" style="width:50px;height:50px">
                                    <% } %>
                                </td>
                                <td style="padding:16px 0">
                                    <p style="font-size:16px; margin:0">
                                        <% if(item.product) { %>
                                            <%= item.product.fullName %> <%= item.featureDescription %>
                                        <% } else if(item.type === "COUPON") { %>
                                            Cupón <%= item.coupon.name %>
                                        <% } else { %>
                                            <%= item.comment %>
                                        <% } %>
                                    </p>
                                </td>
                                <td style="width:32px; text-align:center; color:#8a8a8a">
                                    <%= item.quantity %>
                                </td>
                                <td style="width:80px; text-align:right; font-weight:bold">
                                    <%= formatHelper.formatMoney(item.subtotal) %>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    <% } %>
                <% }); %>

                <table style="width:100%; border-spacing:0; border-collapse:collapse; padding-top:16px">
